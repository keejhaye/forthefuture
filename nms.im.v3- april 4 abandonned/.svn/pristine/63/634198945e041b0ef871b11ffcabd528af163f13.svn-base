*{
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
}

body{
  background-color: #F1F1F1;
}

div#content{
  background-color: #FFFFFF;
  border: 1px solid #CCCCCC;
  box-shadow: 1px 1px 1px #CCCCCC;
  height: auto !important;
  left: 50%;
  margin-left: -275px;
  margin-top: -175px;
  padding-bottom: 10px;
  position: absolute;
  top: 50%;
  width: 550px; 

  border-radius: 10px;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;

  box-shadow: #ccc 1px 1px 1px;
  -moz-box-shadow: #ccc 1px 1px 1px;
  -webkit-box-shadow: #ccc 1px 1px 1px;
}

div#content p{
  color: #999;
  text-align: center;
}

div#content .note{
  padding: 5px;
}

div#content p a{
  color: #F87718;
  text-decoration: none;
  font: 12px Lucida Sans, Tahoma, Arial, Sans-Serif;
}

div#content p a:hover{
  color: #444;
  text-decoration: underline;
}

div#content h1{
  color: #333;
  margin: 0 10px;
  text-align: center;
  padding: 20px 15px 10px;
  border-bottom: 1px solid #ddd;
  font: bold 25px Lucida Sans, Tahoma, Arial, Sans-Serif;
}

div#content h1 span{
  color: #50B9D0;
  font-size: 42px;
  vertical-align: -3px;
}


div#content label{
  color: #333;
  margin-top: 20px;
  margin-bottom: 5px;
  font: 15px Lucida Sans, Tahoma, Arial, Sans-Serif;
}

.datagrid table {
    border-collapse: collapse;
    text-align: left;
    width: 100%;
}

.datagrid {
    font: normal 12px/150% Arial, Helvetica, sans-serif;
    background: #fff;
    overflow: hidden;
    border: 1px solid #000000;
    margin: 25px;
    /*width: 90%;*/
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
}

.datagrid table td, .datagrid table th {
    padding: 3px 10px;
}

.datagrid table thead th {
    background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #000000), color-stop(1, #000000) );
    background: -moz-linear-gradient( center top, #000000 5%, #000000 100% );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#000000', endColorstr='#000000');
    background-color: #000000;
    color: #FFFFFF;
    font-size: 12px;
    font-weight: bold;
    border-left: 1px solid #FFFFFF;
}

.datagrid table thead th:first-child {
    border: none;
}

.datagrid table tbody td {
    color: #000000;
    border-left: 1px solid #FFFFFF;
    font-size: 12px;
    font-weight: normal;
}

.datagrid table tbody .alt td {
    background: #DDF4F7;
    color: #000000;
}

.datagrid table tbody td:first-child {
    border-left: none;
}

.datagrid table tbody tr:last-child td {
    border-bottom: none;
}

