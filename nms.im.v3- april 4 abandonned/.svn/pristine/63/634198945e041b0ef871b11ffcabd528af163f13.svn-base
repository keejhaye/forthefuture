.box_item table {
    border-collapse: collapse;
    text-align: left;
    border: 1px solid #000000;
    width: 100%;
}

.box_item {
    font: normal 12px/150% Arial, Helvetica, sans-serif;
    background: #fff;
    overflow: hidden;
    margin: 25px;
    display: inline-table;
    /*width: 90%;*/
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    width: 95%;
}

.box_item table td, .box_item table th {
    padding: 3px 10px;
}

.box_item table thead th {
    background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #000000), color-stop(1, #000000) );
    background: -moz-linear-gradient( center top, #000000 5%, #000000 100% );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#000000', endColorstr='#000000');
    background-color: #000000;
    color: #FFFFFF;
    font-size: 12px;
    font-weight: bold;
    /*border-left: 1px solid #FFFFFF;*/
}

.box_item table thead th:first-child {
    border: none;
}

.box_item table tbody th,
.box_item table tbody td {
    color: #000000;
    border: 1px solid #ddf4f7;
    font-size: 12px;
    font-weight: normal;
}

.box_item table tbody tr.alt th,
.box_item table tbody tr.alt td {
    color: #000000;
    border: 1px solid #FFFFFF;
    font-size: 12px;
    font-weight: normal;
}

.box_item table tbody .alt td {
    background: #DDF4F7;
    color: #000000;
}

